<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         width="400" height="300"
         backgroundColor="0xffffff" creationComplete="init()">
  <fx:Script>
    <![CDATA[
      import mx.core.FlexGlobals;
      
      private function init():void
      {
        this.title = "RCS Console " + console.rcsVersion.substring(0, console.rcsVersion.length-2);
      }
      
      private function login():void
      {
        /* switch to the main stage */
        FlexGlobals.topLevelApplication.currentState = console.LOGGED_IN_STATE;
      }
    ]]>
  </fx:Script>
  
  <fx:Declarations>
    <s:Sequence id="shake" duration="70" target="{this}">
      <s:Move xBy="20"/>
      <s:Move xBy="-20"/>
      <s:Move xBy="20"/>
      <s:Move xBy="-20"/>
      <s:Move xBy="20"/>
      <s:Move xBy="-20"/>
      <s:Move xBy="20"/>
      <s:Move xBy="-20"/>
    </s:Sequence>
  </fx:Declarations>
  
  <s:Form id="loginForm" horizontalCenter="0" verticalCenter="-20">
    <s:FormItem label="Username">
      <s:TextInput id="UserNameText" width="200" text="" addedToStage="UserNameText.setFocus()"/>
    </s:FormItem>
    <s:FormItem label="Password">
      <s:TextInput id="PasswordText" width="200" displayAsPassword="true"/>
    </s:FormItem>
    <s:FormItem label="Server">
      <s:TextInput id="ServerText" width="200" text=""/>
    </s:FormItem>
  </s:Form>
  <s:Label id="ErrorMessage" left="45" bottom="30" styleName="error" text="Error message..."/>
  <s:Button id="LoginButton" right="15" bottom="15" width="80" label="Login" click="login()"/>
</s:Panel>
